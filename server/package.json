{
  "name": "ham-radio-distributed-server",
  "version": "1.0.0",
  "description": "Distributed server for ham radio mesh network",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "package": "pkg . --out-path binaries",
    "package:all": "pkg . --targets node20-win-x64,node20-macos-x64,node20-linux-x64 --out-path binaries"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "package.json"
    ],
    "targets": [
      "node20-win-x64",
      "node20-macos-x64",
      "node20-macos-arm64",
      "node20-linux-x64",
      "node20-linux-arm64"
    ],
    "outputPath": "binaries",
    "compress": "GZip"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.16.0",
    "bonjour-service": "^1.2.1",
    "cors": "^2.8.5",
    "commander": "^11.1.0",
    "winston": "^3.11.0",
    "node-forge": "^1.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "@types/node": "^20.10.0",
    "@types/cors": "^2.8.17",
    "@types/node-forge": "^1.3.10",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@types/jest": "^29.5.11",
    "pkg": "^5.8.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "Ham Radio Mesh Network",
  "license": "MIT"
}