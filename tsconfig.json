{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@lib/*": ["src/lib/*"],
      "@lib/torrent-protocol/*": ["src/lib/torrent-protocol/*"],
      "@lib/mesh-dl-protocol/*": ["src/lib/mesh-dl-protocol/*"],
      "@lib/content-cache/*": ["src/lib/content-cache/*"],
      "@lib/chunk-transfer/*": ["src/lib/chunk-transfer/*"],
      "@lib/spectrum-monitor/*": ["src/lib/spectrum-monitor/*"],
      "@lib/webrtc-swarm/*": ["src/lib/webrtc-swarm/*"],
      "@lib/band-manager/*": ["src/lib/band-manager/*"],
      "@pages/*": ["src/pages/*"],
      "@types/*": ["src/types/*"],
      "@workers/*": ["src/workers/*"],
      "@specs/*": ["specs/*"],
      "@kiro/*": [".kiro/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}