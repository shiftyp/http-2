# Ham Radio HTTP Configuration

# Station Configuration
CALLSIGN=N0CALL
GRID_SQUARE=FN31pr
OPERATOR_NAME=Your Name

# Radio Interface
RADIO_PORT=/dev/ttyUSB0
RADIO_BAUD=9600
RADIO_MODEL=IC-7300
AUDIO_INPUT=default
AUDIO_OUTPUT=default
PTT_METHOD=CAT

# Operating Frequencies (Hz)
DEFAULT_FREQUENCY=14074000
EMERGENCY_FREQUENCY=14230000

# Offline Operation
OFFLINE_MODE=true
SIGNING_LIST_PATH=./data/signing-list.json
SIGNING_LIST_UPDATE_INTERVAL=86400000

# Local Storage
DATA_PATH=./data
CACHE_PATH=./data/cache
RESOURCE_PATH=./data/resources
LOG_PATH=./data/logs

# Mesh Network
MESH_ENABLED=true
MAX_HOPS=5
ROUTE_TIMEOUT=300000
NODE_TIMEOUT=600000
BEACON_INTERVAL=300000

# Bandwidth Policy
DEFAULT_BANDWIDTH_POLICY=HF-2.8k
MAX_RESOURCE_SIZE=5000
COMPRESSION_REQUIRED=true
STRIP_WHITESPACE=true

# Development
NODE_ENV=development
MOCK_RADIO=false
LOG_LEVEL=info
PORT=3000