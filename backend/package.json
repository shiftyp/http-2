{
  "name": "ham-radio-http-backend",
  "version": "0.1.0",
  "description": "HTTP over Ham Radio - Backend API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "backend:start": "npm run dev",
    "radio:test": "tsx src/lib/radio-control/cli.ts --test",
    "radio:connect": "tsx src/lib/radio-control/cli.ts --connect",
    "radio:disconnect": "tsx src/lib/radio-control/cli.ts --disconnect",
    "radio:status": "tsx src/lib/radio-control/cli.ts --status",
    "cert:generate": "tsx src/lib/cert-authority/cli.ts --generate",
    "mesh:status": "tsx src/lib/mesh-router/cli.ts --status",
    "mesh:join": "tsx src/lib/mesh-router/cli.ts --join",
    "mesh:leave": "tsx src/lib/mesh-router/cli.ts --leave",
    "mesh:routes": "tsx src/lib/mesh-router/cli.ts --routes",
    "page:publish": "tsx src/cli/publish.ts",
    "page:list": "tsx src/cli/list-pages.ts",
    "page:delete": "tsx src/cli/delete-page.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "sqlite3": "^5.1.6",
    "better-sqlite3": "^9.2.2",
    "serialport": "^12.0.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "uuid": "^9.0.1",
    "node-forge": "^1.3.1",
    "html-minifier-terser": "^7.2.0",
    "pako": "^2.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/uuid": "^9.0.7",
    "@types/pako": "^2.0.3",
    "@types/jest": "^29.5.11",
    "@types/supertest": "^2.0.16",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}